<Window x:Class="ProjectAmethyst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAmethyst"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu VerticalAlignment="Top" Height="30">
            <MenuItem x:Name="menuMain" Header="Main" Height="30" Click="menuMain_Click"/>
            <MenuItem x:Name="menuGroups" Header="Edit Groups" Height="30" Click="menuGroups_Click"/>
            <MenuItem x:Name="menuSettings" Header="Settings" Height="30" Click="menuSettings_Click"/>
        </Menu>
        <Frame x:Name="Main" Margin="0,30,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
